<% content_for :title do %>
  <%= @item.title %> | Meowy,Inc.
<% end %>  

  <section id="page-title">

      <div class="container clearfix">
        <h1><%= @item.title %></h1>
        <ol class="breadcrumb">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About", pages_about_path %></li>
          <li class="breadcrumb-item active" aria-current="page">Shop Single</li>
        </ol>  
      </div>

    </section><!-- #page-title end -->

    <!-- Content
    ============================================= -->
    <section id="content">
      <div class="content-wrap">
        <div class="container clearfix">
          <div class="single-product">
            <div class="product">
              <div class="col_two_fifth">

                <!-- Product Single - Gallery
                ============================================= -->

                <% if @item.image.attached? %>
                  <%= image_tag @item.image %>
                <% end %>
              </div>

              <div class="col_two_fifth product-desc">

                <div class="product-price">$<%= @item.price %>0</div>
                <div class="product-rating">
                  <i class="icon-star3"></i>
                  <i class="icon-star3"></i>
                  <i class="icon-star3"></i>
                  <i class="icon-star-half-full"></i>
                  <i class="icon-star-empty"></i>
                </div>
                
                <div class="clear"></div>
                <div class="line"></div>

                <%= button_to 'Add to cart', line_items_path(item_id: @item), {form_class: 'cart nobottommargin clearfix', class: 'add-to-cart button nomargin'} %>
                <div class="clear"></div>
                <div class="line"></div>
                <p><strong>Description</strong> <br><%= @item.description %></p>
              </div>
              <div class="col_one_fifth col_last">
                <div class="divider divider-center"><i class="icon-circle-blank"></i></div>

                <div class="feature-box fbox-plain fbox-dark fbox-small">
                  <div class="fbox-icon">
                    <i class="icon-thumbs-up2"></i>
                  </div>
                  <h3>100% Original</h3>
                  <p class="notopmargin">We guarantee you genuine cats from our Premium selection.</p>
                </div>

                <div class="feature-box fbox-plain fbox-dark fbox-small">
                  <div class="fbox-icon">
                    <i class="icon-credit-cards"></i>
                  </div>
                  <h3>Payment Options</h3>
                  <p class="notopmargin">Pay with our ultra secured Stripe payment module.</p>
                </div>

                <div class="feature-box fbox-plain fbox-dark fbox-small">
                  <div class="fbox-icon">
                    <i class="icon-truck2"></i>
                  </div>
                  <h3>Free & Fast Shipping</h3>
                  <p class="notopmargin">Free Delivery to more than 100 Countries on orders above $40.</p>
                </div>

                <div class="feature-box fbox-plain fbox-dark fbox-small">
                  <div class="fbox-icon">
                    <i class="icon-undo"></i>
                  </div>
                  <h3>30-Days Returns</h3>
                  <p class="notopmargin">You do not like your cat ? Don't worry, you can send it back within 30 days.</p>
                </div>
            </div>
          </div>
        </div>
      </div>    
    </div>
    <div class="admin-buttons">
        <% if current_user && current_user.admin %>
        <%= link_to 'Edit', edit_item_path(@item) %> |
        <%end%>
    </div>    

     

