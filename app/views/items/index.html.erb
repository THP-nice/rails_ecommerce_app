<% content_for :title do %>
  Home | Meowy, Inc.
<% end %>

<!-- Slider
============================================= -->
<section id="slider" class="slider-element swiper_wrapper clearfix" data-autoplay="4500" data-speed="800" data-loop="true" data-grab="true" data-effect="slide" data-arrow="false">

  <div class="swiper-container swiper-parent">
    <div class="swiper-wrapper">
      <div class="swiper-slide dark" style="background: url('/assets/slider/1.png');">
        <div class="container clearfix">
          <div class="slider-caption slider-caption-center">
            <div class="h5 mb-2 font-secondary">Get a little kitten for Christmas</div>
            <h2 class="bottommargin-sm text-white">Winter 2018</h2>
            <a href="#" class="button bg-white text-dark button-light">Shop Cats</a>
          </div>
        </div>
      </div>
      <div class="swiper-slide dark" style="background: url('/assets/slider/2.png') no-repeat center 40%; background-size: cover">
        <div class="container clearfix">
          <div class="slider-caption slider-caption-center">
            <h2 class="bottommargin-sm text-white">Winter Sale</h2>
            <a href="#" class="button bg-white text-dark button-light">Shop Cats</a>
          </div>
        </div>
      </div>
    </div>
    <div class="swiper-pagination"></div>
  </div>

</section><!-- #Slider End -->

<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <!-- Featured Carousel
      ============================================= -->
      <div class="fancy-title title-dotted-border mt-4 mb-1 title-center">
        <h4>Weekly Featured Cats</h4>
      </div>

      <div id="oc-products" class="owl-carousel products-carousel carousel-widget" data-margin="20" data-loop="true" data-autoplay="5000" data-nav="true" data-pagi="false" data-items-xs="1" data-items-sm="2" data-items-md="3" data-items-lg="4" data-items-xl="5">

        <!-- Shop Item 1
        ============================================= -->
        <% @items.each do |item| %>
          <div class="oc-item">
            <div class="product iproduct clearfix">
              <div class="product-image">
                <% if item.image.attached? %>
                  <a href="#"><%= image_tag item.image, alt: item.title %></a>
                <% end %>
                <div class="product-overlay">
                  <%= link_to line_items_path(item_id: @item), :class => "add-to-cart" do %>
                    <i class="icon-shopping-cart"></i><span> Add to Cart</span>
                  <% end %>
                  <%= link_to item, :class => "item-quick-view" do %>
                    <i class="icon-line-search"></i><span>Quick View</span>
                  <% end %>
                </div>
              </div>
              <div class="product-desc">
                <div class="product-title mb-1">
                  <h3>
                    <%= link_to item do %>
                      <%= item.title %>
                    <% end %>
                  </h3>
                </div>
                <div class="product-price font-primary"><ins>$<%= item.price %>0</ins></div>
                <div class="product-rating">
                  <% number = rand(1..6) %>

                  <% if number == 1 %>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star-half-full"></i>
                    <i class="icon-star-empty"></i>
                  <% elsif number == 2 %>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                  <% elsif number == 3 %>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star-half-full"></i>
                  <% elsif number == 4 %>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star-half-full"></i>
                    <i class="icon-star-empty"></i>
                  <% elsif number == 5 %>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star-half-full"></i>
                    <i class="icon-star-empty"></i>
                  <% else %>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                    <i class="icon-star3"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="clear"></div>

    <!-- New Arrivals: Fresh Cats from our selective collection
    ============================================= -->
    <div class="container clearfix">

      <div class="fancy-title title-dotted-border topmargin-sm mb-4 title-center">
        <h4>New Arrivals: Fresh Cats from our selective collection</h4>
      </div>

      <div class="row grid-6"><div class="row grid-6">

        <!-- Shop Items
        ============================================= -->
        <% @items.each do |item| %>
          <div class="col-lg-2 col-md-3 col-6 px-2">
            <div class="product iproduct clearfix">
              <div class="product-image">
                <% if item.image.attached? %>
                  <a href="#"><%= image_tag item.image, alt: item.title %></a>
                <%end%>
                <div class="product-overlay">
                  <%= link_to line_items_path(item_id: @item), :class => "add-to-cart" do %>
