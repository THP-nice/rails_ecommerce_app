<!-- Login Modal -->

<div class="modal1 mfp-hide" id="modal-register">
  <div class="card divcenter" style="max-width: 540px;">
    <div class="card-header py-3 nobg center">
      <h3 class="mb-0 t400 text-center center">Hello, Welcome Back</h3>
    </div>
    <div class="card-body divcenter py-5" style="max-width: 70%;">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-form', class: 'nobottommargin row' }) do |f| %>
        <%= f.error_notification %>

				<div class="col-12">
					<%= f.input :email, required: false, input_html: { class:"form-control not-dark", id: 'login-form-username' }, wrapper: false, placeholder: 'Email' %>
				</div>

				<div class="col-12 mt-4">
				  <%= f.input :password, required: false, input_html: { class:"form-control not-dark", id: 'login-form-username' }, wrapper: false, placeholder: 'Password' %>
				</div>

        <div class="col-12">
          <a href="#" class="fright text-dark t300 mt-2">Forgot Password?</a>
        </div>

        <div class="col-12 mt-4">
					<%= f.button :submit, "Login", class: "button btn-block nomargin", id: "login-form-submit"  %>
        </div>

      <% end %>
    </div>
    <div class="card-footer py-4 center">
      <p class="mb-0">Don't have an account? <a href="users/sign_up"><u>Sign up</u></a></p>
    </div>
  </div>
</div>
